<?xml version="1.0"?>
<robot name="simulated_truck">
  <link name="base_link" />

  <link name="chassis">
    <visual>
      <geometry>
        <box size="12.0 2.4 1.2"/> </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
  </link>

  <link name="cabin">
    <visual>
      <geometry>
        <box size="2.5 2.4 3.0"/> </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_chassis" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="6.0 0 0.6"/> </joint>

  <joint name="chassis_to_cabin" type="fixed">
    <parent link="chassis"/>
    <child link="cabin"/>
    <origin xyz="5.0 0 1.5"/> </joint>
</robot>